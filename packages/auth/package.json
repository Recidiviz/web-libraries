  "engines": {
    "node": ">=12.x.x"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "analyze": "rollup -c --environment ANALYZE",
