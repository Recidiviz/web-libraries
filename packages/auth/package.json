    "@babel/core": "^7.0.0",
    "@recidiviz/eslint-config": "^1.0.0",
    "@recidiviz/tsconfig": "^1.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-url": "^10.1.1",
    "rollup": "^2.75.7",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-node-externals": "^4.0.0",
